@model IEnumerable<PassionProject2024.Models.BuildDto>

@{
    ViewBag.Title = "Build List";
}

<h2>Build List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Components</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><a href="/Build/Details/@item.BuildID">@item.BuildName</td>
                <td>@item.BuildDescription</td>
                <td>
                    <a href="/Build/Details/@item.BuildID" class="btn btn-success">View</a>
                    <a href="/Build/Edit/@item.BuildID" class="btn btn-primary">Edit</a>
                    <a href="/Build/Delete/@item.BuildID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



@Html.ActionLink("Create New Build", "New", null, new { @class = "btn btn-success" })
